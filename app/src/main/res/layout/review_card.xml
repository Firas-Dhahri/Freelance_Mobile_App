<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvReviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviewer Name"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/ratingBarReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="true"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvReviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review text here..."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editTextResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your response"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnSubmitResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
    android:text="Submit Response"
    android:textColor="@android:color/white"
    android:layout_gravity="end"
    android:layout_marginTop="8dp"/>
</LinearLayout>
