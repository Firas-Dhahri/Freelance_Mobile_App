<!-- res/layout/activity_email_input.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/img_2"
    android:padding="16dp">

    <!-- CardView for styling similar to the provided layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title TextView similar to "Login" -->
            <TextView
                android:id="@+id/emailEntryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset your passowrd"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple" />

            <!-- Email Input Field -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
