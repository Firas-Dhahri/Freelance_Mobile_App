<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/img_2"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="16dp">

        <!-- Reusing the same CardView and design as in MainActivity -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp">

                <!-- Title for Registration -->
                <TextView
                    android:id="@+id/registerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/purple"/>
                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/useric"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <!-- Full Name -->
                <Button
                    android:id="@+id/uploadImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/purple"
                    android:text="Upload Image" />

                <EditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Full Name"
                    android:drawableStart="@drawable/ic_user_small"
                    android:drawablePadding="10dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_marginTop="20dp"/>

                <!-- Email -->
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Email"
                    android:padding="8dp"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_email_small"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_marginTop="20dp"/>

                <!-- Phone Number -->
                <EditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLength="8"
                    android:padding="8dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_phone_small"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_marginTop="20dp"/>

                <!-- Password -->
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_pass_small"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_marginTop="20dp"/>

                <!-- Confirm Password -->
                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_pass_small"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_marginTop="20dp"/>

                <!-- Checkboxes -->
                <CheckBox
                    android:id="@+id/checkbox_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:padding="16dp"
                    android:layout_marginTop="20dp" />

                <CheckBox
                    android:id="@+id/checkbox_freelancer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Freelancer"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:padding="16dp"
                    android:layout_marginTop="20dp" />

                <!-- Register Button -->
                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- TextView for redirection to login -->
        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Already registered? Login here"
            android:textSize="14sp"
            android:textColor="@color/purple"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
